<div class="bg-white p-6 rounded shadow">
  <h1 class="text-3xl font-bold mb-4"><%= @event.name %></h1>
  <p class="text-gray-600 mb-2"><strong>Date:</strong> <%= @event.date %></p>
  <p class="text-gray-600 mb-2"><strong>Location:</strong> <%= @event.location %></p>
  <p class="text-gray-600 mb-4"><%= @event.description %></p>
  <p class="text-gray-600 mb-4"><strong>Event Type:</strong> <%= @event.event_type.name %></p>
  <h2 class="text-2xl font-semibold mb-2">Attendees</h2>
  <ul class="list-disc list-inside space-y-2">
    <% @event.attendees.each do |attendee| %>
      <li class="text-gray-600"><%= attendee.name %> - <%= attendee.email %></li>
    <% end %>
  </ul>
</div>
