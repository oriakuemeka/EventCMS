<h1 class="text-2xl font-bold mb-6">All Events</h1>

<% if @events.any? %>
  <div class="pagination mb-4">
    <%= paginate @events %>
  </div>
  <ul class="space-y-4">
    <% @events.each do |event| %>
      <li class="bg-white p-4 rounded shadow">
        <h2 class="text-xl font-semibold"><%= link_to event.name, event_path(event), class: "text-blue-600 hover:underline" %></h2>
        <p class="text-gray-600"><strong>Date:</strong> <%= event.date.strftime("%B %d, %Y") %></p>
        <p class="text-gray-600"><strong>Location:</strong> <%= event.location %></p>
      </li>
    <% end %>
  </ul>
  <div class="pagination mt-4">
    <%= paginate @events %>
  </div>
<% else %>
  <p class="text-gray-600">No events available at the moment.</p>
<% end %>
